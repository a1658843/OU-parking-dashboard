@model IEnumerable<OuStudentPortal.Models.Student>
@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<!-- Add the Create New button here -->
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Major</th>
            <th>GPA</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Major</td>
                <td>@s.Gpa.ToString("0.00")</td>
                <td>
                    <a asp-controller="Students" asp-action="Details" asp-route-id="@s.Id">Details</a> |
                    <a asp-controller="Students" asp-action="Edit" asp-route-id="@s.Id">Edit</a> |
                    <a asp-controller="Students" asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
