@model OuParkingDashboard.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Major</dt>
    <dd class="col-sm-10">@Model.Major</dd>

    <dt class="col-sm-2">GPA</dt>
    <dd class="col-sm-10">@Model.Gpa.ToString("0.00")</dd>
</dl>

<p>
    <a class="btn btn-secondary" asp-controller="Students" asp-action="Index">Back to list</a>
</p>
